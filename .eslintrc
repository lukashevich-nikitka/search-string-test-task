{
    "extends": ["airbnb", "plugin:react-hooks/recommended"],
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
    "react/jsx-props-no-spreading": "off",
    "react/prop-types": "off",
    "linebreak-style": 0,
      "jsx-a11y/label-has-associated-control": [ "error", {
        "required": {
          "some": [ "nesting", "id"  ]
        }
      }],
      "jsx-a11y/label-has-for": [ "error", {
        "required": {
          "some": [ "nesting", "id"  ]
        }
      }]
    }
}